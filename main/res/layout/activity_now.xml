<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".NowActivity"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="38.75dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/tab1_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/tab1_clicked"
            android:clickable="true" />

        <ImageView
            android:id="@+id/tab1_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/tab2_unclicked"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noise Decibel"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:textColor="#4e4e4e"
            android:layout_marginTop="27dp"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/center_face_img"
            android:layout_marginTop="20dp"
            android:layout_width="166.25dp"
            android:layout_height="175.75dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="283.75dp"
            android:layout_height="25.25dp"
            android:background="@drawable/seekbar2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/now_decibel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="84"
                android:textSize="55sp"
                android:fontFamily="sans-serif-thin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dB"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/explain_card"
        android:layout_width="match_parent"
        android:layout_height="144.25dp"
        android:layout_below="@id/layout"/>


</RelativeLayout>
